<Window x:Class="CleanEstimate.View.LeistungView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Path=DisplayName}" Height="300" Width="300" Background="WhiteSmoke">
    <Grid>
        <TextBlock Text="Etage:" Height="20" HorizontalAlignment="Left" Margin="12,11,0,0" VerticalAlignment="Top" Width="90" TextAlignment="Right"/>
        <TextBox Height="25" Margin="108,9,12,0" VerticalAlignment="Top" Text="{Binding Path=Etage}"/>

        <TextBlock Text="Bezeichnung:" Height="20" HorizontalAlignment="Left" Margin="12,43,0,0" VerticalAlignment="Top" Width="90" TextAlignment="Right"/>
        <TextBox Height="25" Margin="108,40,12,0" VerticalAlignment="Top" Text="{Binding Path=Bezeichnung}"/>

        <TextBlock Text="Anzahl:" Height="20" HorizontalAlignment="Left" Margin="12,74,0,0" VerticalAlignment="Top" Width="90" TextAlignment="Right"/>
        <TextBox Height="25" Margin="108,71,12,0" VerticalAlignment="Top" Text="{Binding Path=Anzahl}"/>
        
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="59,226,0,0" Click="Button_Click" VerticalAlignment="Top" Width="75" />
        <Button Content="Schließen" Height="23" HorizontalAlignment="Left" Margin="140,226,0,0" Click="Button_Click_1" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
