<Window x:Class="CleanEstimate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behavior="clr-namespace:CleanEstimate.Behavior"
        behavior:ViewModelBehavior.LoadUnload="true"
        Title="{Binding Path=DisplayName}" Height="500" Width="900">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Datei">
                <MenuItem Header="E_xit" Command="{Binding Path=CloseCommand}" />
            </MenuItem>
        </Menu>
        <ToolBar DockPanel.Dock="Top">
            <ToggleButton Content="Drück mich" />
        </ToolBar>
        <DataGrid ItemsSource="{Binding Path=MyData}" AutoGenerateColumns="True">
            
        </DataGrid>
    </DockPanel>
</Window>
